<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompanionApp.Views.UserDetailsPage"
             Title="{Binding Title}">
    <StackLayout Spacing="10" Padding="10">
        <Label Text="DisplayName:" FontSize="Medium" />
        <Label Text="{Binding DisplayName}" FontSize="Medium"/>
        <Label Text="UserPrincipalName:" FontSize="Medium"  />
        <Label Text="{Binding UserPrincipalName}" FontSize="Medium"/>
        <Button Text="Assign User" Clicked="AddItem_Clicked"/>
        <Button Text="UnAssign User" Clicked="AddItem_Clicked2"/>
        <Button Text="Scan another device? Click here" Clicked="AddItem_Clicked1"/>
    </StackLayout>
</ContentPage>
    